{
    "compilerOptions": {
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "noUncheckedIndexedAccess": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "strict": true,
        "target": "ESNext"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "tsup.config.ts",
        "src/**/*.ts"
    ]
}