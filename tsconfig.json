{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedDeclarations": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
